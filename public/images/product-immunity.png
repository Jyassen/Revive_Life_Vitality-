<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="300" height="400" viewBox="0 0 300 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Gradient for the bottle -->
  <linearGradient id="bottleGradient" x1="0%" y1="0%" x2="100%" y2="100%">
    <stop offset="0%" stop-color="#d4aa00" />
    <stop offset="100%" stop-color="#b58800" />
  </linearGradient>
  
  <!-- Bottle shape -->
  <g transform="translate(100, 40)">
    <!-- Bottle cap -->
    <rect x="35" y="0" width="30" height="20" rx="5" fill="#333" />
    
    <!-- Bottle neck -->
    <rect x="40" y="20" width="20" height="30" fill="#d4aa00" />
    
    <!-- Main bottle body -->
    <path d="M30,50 h40 a40,40 0 0 1 40,40 v160 a40,40 0 0 1 -40,40 h-40 a40,40 0 0 1 -40,-40 v-160 a40,40 0 0 1 40,-40 z" 
          fill="url(#bottleGradient)" />
    
    <!-- Immunity icon -->
    <g transform="translate(50, 130)">
      <!-- Shield shape -->
      <path d="M0,-30 L25,0 L0,30 L-25,0 Z" fill="#e6c700" stroke="#fff" stroke-width="1" />
      
      <!-- Inner shield details -->
      <path d="M0,-20 L15,0 L0,20 L-15,0 Z" fill="#f0d500" stroke="#fff" stroke-width="1" />
      
      <!-- Center dot -->
      <circle cx="0" cy="0" r="5" fill="#fff" />
    </g>
    
    <!-- Product label -->
    <rect x="20" y="170" width="60" height="80" rx="5" fill="#fff" fill-opacity="0.8" />
    
    <!-- Product name -->
    <text x="50" y="190" font-family="Arial, sans-serif" font-size="9" font-weight="bold" text-anchor="middle" fill="#333">IMMUNITY</text>
    <text x="50" y="203" font-family="Arial, sans-serif" font-size="9" font-weight="bold" text-anchor="middle" fill="#333">BOOST</text>
    
    <!-- Volume -->
    <text x="50" y="225" font-family="Arial, sans-serif" font-size="8" text-anchor="middle" fill="#333">250ml</text>
    
    <!-- Extra details -->
    <text x="50" y="240" font-family="Arial, sans-serif" font-size="6" text-anchor="middle" fill="#666">DEFENSE FORMULA</text>
  </g>
</svg> 