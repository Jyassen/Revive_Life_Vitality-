<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="300" height="400" viewBox="0 0 300 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Gradient for the bottle -->
  <linearGradient id="bottleGradient" x1="0%" y1="0%" x2="100%" y2="100%">
    <stop offset="0%" stop-color="#f5a623" />
    <stop offset="100%" stop-color="#d18000" />
  </linearGradient>
  
  <!-- Bottle shape -->
  <g transform="translate(100, 40)">
    <!-- Bottle cap -->
    <rect x="35" y="0" width="30" height="20" rx="5" fill="#333" />
    
    <!-- Bottle neck -->
    <rect x="40" y="20" width="20" height="30" fill="#f5a623" />
    
    <!-- Main bottle body -->
    <path d="M30,50 h40 a40,40 0 0 1 40,40 v160 a40,40 0 0 1 -40,40 h-40 a40,40 0 0 1 -40,-40 v-160 a40,40 0 0 1 40,-40 z" 
          fill="url(#bottleGradient)" />
    
    <!-- Turmeric and ginger icons -->
    <g transform="translate(50, 130)">
      <!-- Turmeric root -->
      <path d="M-15,-20 c-5,-5 -10,5 -5,10 c5,5 15,0 10,-5 c-5,-5 0,-10 5,-5 c5,5 0,15 -5,10 c-5,-5 -10,0 -5,5 c5,5 15,0 10,-5 c-5,-5 0,-10 5,-5" 
            fill="#e67e00" stroke="#fff" stroke-width="1" />
      
      <!-- Ginger root -->
      <path d="M15,-10 c5,-5 10,5 5,10 c-5,5 -15,0 -10,-5 c5,-5 0,-10 -5,-5 c-5,5 0,15 5,10 c5,-5 10,0 5,5 c-5,5 -15,0 -10,-5" 
            fill="#d4aa00" stroke="#fff" stroke-width="1" />
      
      <!-- Spice powder -->
      <circle cx="0" cy="15" r="15" fill="#ffc266" fill-opacity="0.7" />
      <path d="M-10,15 c0,0 5,-5 10,0 c5,5 10,0 10,0" stroke="#e67e00" stroke-width="2" stroke-linecap="round" />
    </g>
    
    <!-- Product label -->
    <rect x="20" y="170" width="60" height="80" rx="5" fill="#fff" fill-opacity="0.8" />
    
    <!-- Product name -->
    <text x="50" y="190" font-family="Arial, sans-serif" font-size="9" font-weight="bold" text-anchor="middle" fill="#333">TURMERIC</text>
    <text x="50" y="203" font-family="Arial, sans-serif" font-size="9" font-weight="bold" text-anchor="middle" fill="#333">GINGER</text>
    
    <!-- Volume -->
    <text x="50" y="225" font-family="Arial, sans-serif" font-size="8" text-anchor="middle" fill="#333">250ml</text>
    
    <!-- Extra details -->
    <text x="50" y="240" font-family="Arial, sans-serif" font-size="6" text-anchor="middle" fill="#666">ANTI-INFLAMMATORY</text>
  </g>
</svg> 