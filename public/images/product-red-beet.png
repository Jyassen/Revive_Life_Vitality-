<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="300" height="400" viewBox="0 0 300 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Gradient for the bottle -->
  <linearGradient id="bottleGradient" x1="0%" y1="0%" x2="100%" y2="100%">
    <stop offset="0%" stop-color="#e14458" />
    <stop offset="100%" stop-color="#9d1c28" />
  </linearGradient>
  
  <!-- Bottle shape -->
  <g transform="translate(100, 40)">
    <!-- Bottle cap -->
    <rect x="35" y="0" width="30" height="20" rx="5" fill="#333" />
    
    <!-- Bottle neck -->
    <rect x="40" y="20" width="20" height="30" fill="#e14458" />
    
    <!-- Main bottle body -->
    <path d="M30,50 h40 a40,40 0 0 1 40,40 v160 a40,40 0 0 1 -40,40 h-40 a40,40 0 0 1 -40,-40 v-160 a40,40 0 0 1 40,-40 z" 
          fill="url(#bottleGradient)" />
    
    <!-- Beetroot icon -->
    <circle cx="50" cy="130" r="25" fill="#9d1c28" />
    <path d="M50,105 c0,0 -15,10 -15,25 c0,15 15,25 15,25 c0,0 15,-10 15,-25 c0,-15 -15,-25 -15,-25" 
          fill="#6b0013" stroke="#fff" stroke-width="1" />
    <path d="M50,105 v-15" stroke="#4a7c59" stroke-width="4" stroke-linecap="round" />
    <path d="M42,95 c0,0 8,-5 16,0" stroke="#4a7c59" stroke-width="2" />
    
    <!-- Product label -->
    <rect x="20" y="170" width="60" height="80" rx="5" fill="#fff" fill-opacity="0.8" />
    
    <!-- Product name -->
    <text x="50" y="190" font-family="Arial, sans-serif" font-size="10" font-weight="bold" text-anchor="middle" fill="#333">RED BEET</text>
    <text x="50" y="205" font-family="Arial, sans-serif" font-size="10" font-weight="bold" text-anchor="middle" fill="#333">HEAT</text>
    
    <!-- Volume -->
    <text x="50" y="225" font-family="Arial, sans-serif" font-size="8" text-anchor="middle" fill="#333">250ml</text>
    
    <!-- Extra details -->
    <text x="50" y="240" font-family="Arial, sans-serif" font-size="6" text-anchor="middle" fill="#666">ENERGY BOOST</text>
  </g>
</svg> 